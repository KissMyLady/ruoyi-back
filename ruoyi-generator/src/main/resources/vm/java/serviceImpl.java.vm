            tbInfo.setTotal(countTotal);  //总条数
            tbInfo.setCode(200);
            tbInfo.setMsg("查询成功");
        }
        catch (Exception e){
            tbInfo.setMsg("查询错误: "+ e.getMessage());
            tbInfo.setCode(500);
            logger.warn("sql查询表错误, 原因是: {}", e.toString();
        }
        return tbInfo;
    }

